<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".CaptureFaceDetection.GalleryFaceDetectionActivity">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="427dp"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/Reload_segm"
                android:layout_width="133dp"
                android:layout_height="70dp"
                android:layout_marginBottom="2dp"
                android:text="Reload"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <ImageButton
                android:id="@+id/img_btn_pick_segm"
                android:layout_width="133dp"
                android:layout_height="70dp"
                android:src="@drawable/camera"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <ImageView
                android:id="@+id/img_view_pick_segm"
                android:layout_width="411dp"
                android:layout_height="510dp"
                android:layout_marginStart="16dp"
                android:layout_marginBottom="72dp"
                app:layout_constraintBottom_toTopOf="@+id/mask_view_pick_segm"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent" />

            <ImageView
                android:id="@+id/mask_view_pick_segm"
                android:layout_width="411dp"
                android:layout_height="510dp"
                android:layout_marginStart="8dp"
                android:layout_marginBottom="44dp"
                app:layout_constraintBottom_toTopOf="@+id/imgNameTextView_segm"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent" />

            <ImageView
                android:id="@+id/img_view_pick_canvas_segm"
                android:layout_width="411dp"
                android:layout_height="510dp"
                android:layout_marginStart="16dp"
                android:layout_marginBottom="72dp"
                app:layout_constraintBottom_toTopOf="@+id/mask_view_pick_segm"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/img_view_pick_segm"
                app:layout_constraintStart_toStartOf="parent" />

            <ImageView
                android:id="@+id/mask_view_pick_canvas_segm"
                android:layout_width="411dp"
                android:layout_height="510dp"
                android:layout_marginStart="8dp"
                android:layout_marginBottom="44dp"
                app:layout_constraintBottom_toTopOf="@+id/imgNameTextView_segm"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/imgNameTextView_segm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Image: No img"
                android:textColor="#000000"
                app:layout_constraintBottom_toTopOf="@+id/Reload_segm"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:text="Image Segmentation"
                app:layout_constraintBottom_toTopOf="@+id/img_view_pick_segm"
                app:layout_constraintTop_toTopOf="parent"
                tools:layout_editor_absoluteX="32dp" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:text="Image Mask"
                app:layout_constraintBottom_toTopOf="@+id/mask_view_pick_segm"
                app:layout_constraintTop_toBottomOf="@+id/img_view_pick_segm"
                tools:layout_editor_absoluteX="21dp" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </RelativeLayout>

</ScrollView>


